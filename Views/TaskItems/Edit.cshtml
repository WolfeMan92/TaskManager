@model TaskManager.Models.TaskItemFormViewModel

@{
    ViewData["Title"] = "Edit Task";
}

<h2>Edit Task</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TaskItem.Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TaskItem.Title" class="control-label"></label>
        <input asp-for="TaskItem.Title" class="form-control" />
        <span asp-validation-for="TaskItem.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TaskItem.Description" class="control-label"></label>
        <input asp-for="TaskItem.Description" class="form-control" />
        <span asp-validation-for="TaskItem.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TaskItem.DueDate" class="control-label"></label>
        <input asp-for="TaskItem.DueDate" class="form-control" />
        <span asp-validation-for="TaskItem.DueDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TaskItem.Status" class="control-label"></label>
        <input asp-for="TaskItem.Status" class="form-control" />
        <span asp-validation-for="TaskItem.Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TaskItem.Priority" class="control-label"></label>
        <input asp-for="TaskItem.Priority" class="form-control" />
        <span asp-validation-for="TaskItem.Priority" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Categories</label>
        <select asp-for="SelectedCategoryIds" asp-items="Model.Categories" class="form-control" multiple></select>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
